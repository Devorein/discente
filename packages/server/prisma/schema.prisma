generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl", "darwin", "native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum UserRole {
  learner
  teacher
  admin
}

enum UserStatus {
  public
  private
}

model User {
  id           String     @id @default(uuid()) @db.Uuid
  email        String     @unique
  username     String     @unique
  hashedPass   String?
  name         String
  role         UserRole
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  tokenVersion Int        @default(0)
  avatar       String?
  status       UserStatus @default(public)
}
