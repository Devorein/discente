generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl", "darwin", "native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum UserRole {
  learner
  instructor
  admin
}

enum ModelStatus {
  public
  private
  banned
}

enum CourseLevel {
  beginner
  intermediate
  expert
  all
}

enum Language {
  english
  french
  spanish
  portugese
  arabic
  polish
  german
  italian
  bangla
  korean
  russian
  japanese
  hindi
}

enum CourseCategory {
  development
  business
  finance_and_accounting
  it_and_software
  office_productivity
  personal_development
  design
  marketing
  lifestyle
  photography_and_video
  health_and_fitness
  music
  teaching_and_academics
}

model User {
  id             String      @id @default(uuid()) @db.Uuid
  email          String      @unique
  username       String      @unique
  hashedPass     String?
  name           String
  role           UserRole
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  tokenVersion   Int         @default(0)
  avatar         String?
  status         ModelStatus @default(public)
  createdCourses Course[]
}

model Course {
  id               String         @id @default(uuid()) @db.Uuid
  title            String
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  createdBy        String         @db.Uuid
  instructor       User           @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  briefDescription String
  description      String
  image            String
  tags             String[]
  price            Int
  status           ModelStatus    @default(public)
  category         CourseCategory
  level            CourseLevel
  language         Language
  subtitle         Language?
}
