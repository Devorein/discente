{
  "name": "@discente/server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "del-cli ./dist",
    "build": "tsc --sourceMap false",
    "build:watch": "tsc -w",
    "start": "npx dotenv -e .env -- node dist/index.js",
    "start:watch": "npx dotenv -e .env -- nodemon dist/index.js",
    "start:prod": "npx dotenv -e .env.prod -- pm2 start dist/index.js --time --name server",
    "lint": "npx eslint -c .eslintrc.js . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "npx dotenv -e .env.test -- npx jest --verbose --runInBand",
    "format": "npx prettier \"./src/**/*.(ts|js)\" --write",
    "dev": "npx concurrently \"npm run build:watch\" \"npm run start:watch\" --names \"tsc,node\" -c \"blue,green\"",
    "prisma-migrate": "npx dotenv -e .env -- npx prisma migrate dev",
    "prisma-migrate:test": "npx dotenv -e .env.test -- npx prisma migrate dev",
    "prisma-migrate:prod": "npx dotenv -e .env.prod -- npx prisma migrate dev",
    "prisma-studio": "npx dotenv -e .env -- npx prisma studio",
    "prisma-studio:test": "npx dotenv -e .env.test -- npx prisma studio",
    "prisma-studio:prod": "npx dotenv -e .env.prod -- npx prisma studio",
    "setup-db": "npx dotenv -e .env -- node ./tests/setupDatabase.js",
    "setup-db:test": "npx dotenv -e .env.test -- node ./tests/setupDatabase.js",
    "prisma:generate": "prisma generate",
    "lerna-add": "npx lerna add --scope=@discente/server"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "argon2": "^0.28.5",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "uuid": "^8.3.2",
    "winston": "^3.7.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "axios": "^0.27.2",
    "pgtools": "^0.3.2",
    "prisma": "^3.14.0",
    "supertest": "^6.2.3"
  }
}