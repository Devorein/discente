    "react-dom": "^17.0.2",
    "react-query": "^3.39.0",
    "shortid": "^2.2.16",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^12.1.6",
    "@storybook/addon-essentials": "^6.5.7",
    "@storybook/addon-links": "^6.5.7",
    "@storybook/builder-webpack5": "^6.5.7",
    "@storybook/manager-webpack5": "^6.5.7",
    "@storybook/preset-create-react-app": "^1.2.0",
    "@storybook/react": "^6.5.7",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "chromatic": "^6.5.6",
    "jest-environment-jsdom": "^28.1.0",
    "msw": "^0.42.1",
    "msw-storybook-addon": "^1.6.3",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start:prod": "pm2 start next --name client --time -- start -p 3004",
    "test:unit": "npx jest --runInBand --config='./jest.config.ts'",
    "sb:start": "npx start-storybook -p 3003",
    "build-storybook": "npx build-storybook",
    "test": "npm run test:unit",
    "lint": "eslint -c .eslintrc.json . --ext .ts --ext .tsx",
    "lint:prod": "npm run lint -- --quiet",
    "lint:fix": "npm run lint -- --fix",
    "lerna-add": "npx lerna add --scope=@discente/client",
    "format": "npx prettier \"./**/*.(ts|tsx|js)\" --write"
  },
  "prepare": "husky install",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}