{
  "name": "discente",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start",
    "build": "lerna run build --ignore=@discente/seeder",
    "build-storybook": "lerna run build-storybook --scope=@discente/client",
    "dev": "lerna run dev --parallel",
    "test": "lerna run test --parallel --ignore=@discente/seeder",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "start:test": "lerna run start:test --scope=@discente/server",
    "prisma:generate": "lerna run prisma:generate --scope=@discente/server",
    "setup-db:test": "lerna run setup-db:test --scope=@discente/server",
    "server:add": "lerna add --scope @discente/server",
    "client:add": "lerna add --scope @discente/client",
    "shared:add": "lerna add --scope @discente/shared",
    "format": "lerna run format --parallel && lerna run lint:fix --parallel",
    "prepare": "husky install",
    "start-client:prod": "lerna run start:prod --scope @discente/client",
    "start-server:prod": "lerna run start:prod --scope @discente/server"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "colors": "^1.4.0",
    "concurrently": "^6.5.1",
    "del-cli": "^4.0.1",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^26.4.6",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "dotenv-cli": "^5.1.0"
  }
}